<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/wordInput_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="@string/wordPlaceHint"
        android:textColor="@color/colorPurpleDark"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <EditText
        android:id="@+id/meaningInput_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/definitionPlaceHint"
        android:layout_below="@+id/wordInput_editText"
        android:textColor="@color/colorPurpleDark"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>