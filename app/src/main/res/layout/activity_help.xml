<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/boxLinearLayout_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#CFBAFF"
    tools:context=".BoxActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/helpTitle_textView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/raleway_bold"
        android:background="#1E091F"
        android:textColor="#CFBAFF"
        android:gravity="start|center_vertical"
        android:layoutDirection="ltr"
        android:text="@string/helpTitle"
        android:textAlignment="center"
        android:textDirection="ltr"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/helpactivity_back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@+id/helpTitle_textView"
        app:layout_constraintBottom_toBottomOf="@+id/helpTitle_textView"
        app:layout_constraintStart_toStartOf="@+id/helpTitle_textView"
        android:background="#1E091F"
        android:layout_marginLeft="10dp"
        android:drawableStart="@drawable/arrow_left" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/helpTitle_textView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbars="vertical"
        android:fillViewport="true" >


        <TextView
            android:id="@+id/helpInstructions_textView"
            android:textColor="@color/colorPurpleDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/helpInstructions"
            android:fontFamily="@font/raleway_light"
            android:textSize="26sp"
            android:padding="20dp" />


    </ScrollView>



</android.support.constraint.ConstraintLayout>














